choice
	prompt "Busybox version series you wish"
	help
		Here you can choose which version series of busybox you want to
		use.

	config EMBTK_BB_VERSION_1_18_X
		bool "busybox-1.18.x"
	config EMBTK_BB_VERSION_1_17_X
		bool "busybox-1.17.x"
endchoice

choice
	prompt "Busybox version you wish"
	help
		Here you can choose which version of busybox you want to use.

	config  EMBTK_BB_VERSION_1_18_5
		bool "busybox-1.18.5"
		depends on EMBTK_BB_VERSION_1_18_X
		select EMBTK_BB_NEED_PATCH

	config  EMBTK_BB_VERSION_1_17_4
		bool "busybox-1.17.4"
		select EMBTK_BB_NEED_PATCH
		depends on EMBTK_BB_VERSION_1_17_X
endchoice

config EMBTK_BB_VERSION_STRING
	string
	default "1.18.5"	if EMBTK_BB_VERSION_1_18_5
	default "1.17.4"	if EMBTK_BB_VERSION_1_17_4

config EMBTK_BB_NEED_PATCH
	bool

source packages/busybox/busybox-kconfigs/busybox.kconfig
